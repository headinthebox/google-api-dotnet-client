<Grid x:Class="Com.Google.AdSense.Gadget.Ui.MainContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ch="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      xmlns:chprim="clr-namespace:System.Windows.Controls.DataVisualization.Charting.Primitives;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      xmlns:visualizationToolkit="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      Width="250" Height="200"
      Name="outerGrid"
       >
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SharedResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Grid.Resources>

    <Border Style="{StaticResource OuterBorder}">
        <Grid Width="250" Height="200">
            <ch:Chart Name="testChart" Title="Est. Revenue" />
            <Button Content="Get Live Data" Height="23" HorizontalAlignment="Left" Margin="6,5,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="loadLiveData" />
        </Grid>
    </Border>
</Grid>
